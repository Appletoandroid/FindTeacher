<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_margin="@dimen/_5sdp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/_5sdp"
        android:orientation="horizontal"
        android:gravity="center"
        android:background="@color/dim_white">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/raw_iv_student_profile"
            android:layout_width="@dimen/_50sdp"
            android:layout_height="@dimen/_50sdp"
            android:src="@drawable/default_user"
            android:padding="@dimen/_5sdp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/raw_tv_student_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Divya K"
                android:lines="1"
                android:textColor="@color/primary_text_color"
                android:textSize="@dimen/_14ssp"/>

            <TextView
                android:id="@+id/raw_tv_student_city"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ahmedabad"
                android:lines="1"
                android:textColor="@color/secondary_text_color"
                android:textSize="@dimen/_12ssp"/>


        </LinearLayout>

        <Button
            android:id="@+id/raw_btn_view_more"
            android:layout_width="@dimen/_70sdp"
            android:layout_height="@dimen/_22sdp"
            android:text="@string/view_more"
            android:textAllCaps="false"
            android:textSize="@dimen/_10ssp"
            android:textColor="@color/white"
            android:background="@color/dim_yellow"/>

    </LinearLayout>

</LinearLayout>